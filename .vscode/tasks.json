{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev"],
      "cwd": "${workspaceFolder}/frontend",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE.*ready",
          "endsPattern": "^"
        }
      }
    },
    {
      "label": "build",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "cwd": "${workspaceFolder}/frontend",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "cwd": "${workspaceFolder}/frontend",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "lint:fix",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint:fix"],
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "label": "format",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "format"],
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "label": "type-check",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "type-check"],
      "cwd": "${workspaceFolder}/frontend",
      "problemMatcher": ["$tsc"]
    }
  ]
}
